<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_arrow_drop_up_black_24dp"/>
        <TextView
            android:id="@+id/corona_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20210524"
            android:textColor="#F41707"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="명의 신규확진 추가"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="누적 확진자"
            android:textColor="#ED6360"
            android:textSize="14dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="백신접종현황"
            android:textColor="#016A96"
            android:textSize="14dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="누적 사망자"
            android:textColor="#403643"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        //확진자

        <TextView
            android:id="@+id/corona_confirmed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="136467"
            android:textColor="#ED6360"
            android:textSize="22dp"
            android:textStyle="bold" />
        //격리해제

        <TextView
            android:id="@+id/corona_release"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="126427"
            android:textColor="#016A96"
            android:textSize="22dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/corona_death"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1934"
            android:textColor="#403643"
            android:textSize="22dp"
            android:textStyle="bold" />
    </LinearLayout>

