<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.googlemap.MapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/map_frame_kculture_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/style_map_border"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                app:srcCompat="@drawable/img_map_musieum" />

                            <TextView
                                android:id="@+id/btn_category_museum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="박물관"
                                android:textColor="@color/basic_text"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/style_map_border"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                app:srcCompat="@drawable/img_map_art" />

                            <TextView
                                android:id="@+id/btn_category_art"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미술관"
                                android:textColor="@color/basic_text"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/style_map_border"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                app:srcCompat="@drawable/img_map_concert_hall" />

                            <TextView
                                android:id="@+id/nav_category_tv_concert_hall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="공연장"
                                android:textColor="@color/basic_text"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/style_map_border"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                app:srcCompat="@drawable/img_map_library" />

                            <TextView
                                android:id="@+id/nav_category_tv_library"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="도서관"
                                android:textColor="@color/basic_text"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/style_map_border"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                app:srcCompat="@drawable/img_map_artcenter" />

                            <TextView
                                android:id="@+id/nav_category_tv_artcenter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="문화예술회관"
                                android:textColor="@color/basic_text"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/style_map_border"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                app:srcCompat="@drawable/img_map_etc" />

                            <TextView
                                android:id="@+id/nav_category_tv_etc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="기타"
                                android:textColor="@color/basic_text"
                                android:textSize="18dp" />
                        </LinearLayout>
                    </LinearLayout>

                </HorizontalScrollView>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/map_frame_welefare_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn_category_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(그림)  장소1"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/btn_category_place2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="(그림)  장소2"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/btn_category_place3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="(그림)  장소3..."
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/btn_category_place4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="(그림)  장소4..."
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/btn_category_place5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="(그림)  장소5..."
                            android:textSize="20dp" />
                    </LinearLayout>

                </HorizontalScrollView>
            </FrameLayout>
        </fragment>

    </LinearLayout>

    <!--맵 선택 시 서브 페이지 + FOOTER-->
    <LinearLayout
        android:id="@+id/map_explain_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">
        <!--맵 선택 시 서브 페이지-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--서브페이지-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/basic_text"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            tools:text="서울 식물원" />

                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            tools:text="기타"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="top"
                            android:id="@+id/imageView12"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_location_on_black_24dp" />

                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/tv_address"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            tools:text="퇴계로 34길 28"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/style_map_border"
                    android:gravity="center|center_vertical">

                    <ImageView
                        android:id="@+id/img_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_call_black_24dp" />

                    <ImageView
                        android:id="@+id/img_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_web_black_24dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--footer-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="#00ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/map_footer_tv_kculture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_surround_sound_24"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                ></ImageView>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="한국 문화"
                android:layout_marginLeft="-10dp"
                android:textColor="@color/basic_text"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/map_footer_tv_welefare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_domain_24">

            </ImageView>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="다문화 센터"
                android:textColor="@color/basic_text"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/map_footer_tv_emergency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:background="#00ffffff"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_local_hospital_24"
                android:layout_weight="1"
                android:layout_marginLeft="13dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

            </ImageView>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:layout_gravity="center"

                android:text="응급센터"
                android:textColor="@color/basic_text"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- 하단메뉴 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/footer"></include>
    </LinearLayout>
</LinearLayout>