            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_margin="10dp"
                android:background="@color/real_bright_gray"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/covid_19" />

                <TextView
                    android:id="@+id/tv_covid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="오늘의 코로나"
                    android:textColor="@color/basic_text"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_corona"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_margin="10dp"
                android:background="@color/real_bright_gray"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/information" />

                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공지사항"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/basic_text"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <!--            FAQ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_margin="10dp"
                android:background="@color/real_bright_gray"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/img_main_qna" />

                <TextView
                    android:id="@+id/tv_faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="QnA"
                    android:textColor="@color/basic_text"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/style_info_border"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/faq_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text="다문화가족지원센터에서는 어떤 서비스를 제공하나요?"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/faq_img1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"></ImageView>
                </LinearLayout>

                //1st QnA
                <LinearLayout
                    android:id="@+id/faq_explain1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_qna_round"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="다문화가족지원센터 사업(가족, 성평등, 인권, 사회통합영역 프로그램 운영, 상담 등) 및 방문교육서비스(한국어교육서비스, 부모교육서비스, 자녀생활서비스), 정보안내, 다문화가족 자녀 언어발달지원사업, 결혼이민자 통번역서비스를 제공하며, 무료로 서비스를 받을 수 있습니다. 단, 자녀생활서비스는 소득기준별 본인부담금 적용됩니다.">

                    </TextView>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/style_info_border"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/faq_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text="한국어를 잘하지 못합니다. 약국이나 병원에서 진료를 받을 때 도움을 받을 수 있을까요?"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/faq_img2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/faq_explain2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_qna_round"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="다누리콜센터 1577-1366번으로 전화주시면, 해당언어 상담원이 의사 또는 약사 분께 통역하여드립니다.
(※ 서비스언어 : 한국어, 영어, 중국어, 베트남어, 필리핀어, 캄보디아어, 몽골어, 러시아어, 일본어, 태국어, 우즈베키스탄어, 네팔어, 라오스)"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@color/real_bright_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/img_logo_mjc"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOA Team from Myonggi College"
                        android:textSize="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="장성필 | 최준배 | 윤병준 | 이유비"
                        android:textSize="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="\nAdd Cul. AllRight Reserved\n\n"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>


    <!-- 하단메뉴 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/footer"></include>
    </LinearLayout>

</LinearLayout>
